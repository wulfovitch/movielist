<%= form_tag root_url do -%>

  <p>
		<%= label_tag :username %>
    <%= text_field_tag :username, '', {:size => '20'} %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password,'', {:size => '20'} %>
  </p>
  <p>
    <%= submit_tag("Log in", {:class => "button"}) %>                            
  </p>

<%- end -%>
